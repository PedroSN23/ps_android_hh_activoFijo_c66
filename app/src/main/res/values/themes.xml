<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ps_android_hh_activoFijo_C66" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/verdeAstlix</item>
        <item name="colorPrimaryVariant">@color/verdeAstlix2</item>
        <item name="colorOnPrimary">@color/grisAstlix</item>

        <item name="colorSecondary">@color/verdeAstlix</item>
        <item name="colorSecondaryVariant">@color/verdeAstlix2</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/verdeAstlix</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:textColorSecondary">@color/white</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/white</item>

    </style>
    <style name="MyEditTextStylemenu4p2" parent="Widget.Design.TextInputLayout">
        <item name="endIconTint">@color/azul_synlab2</item>
        <item name="hintTextColor">@color/azul_synlab2</item>
        <item name="colorAccent">@color/azul_synlab2</item>
    </style>

    <style name="MyEditTextStylemenuLogin" parent="Widget.Design.TextInputLayout">
        <item name="endIconTint">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="startIconTint">@color/white</item>
    </style>

    <style name="ProgressBarmenu4" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/menu4p</item>
    </style>

    <style name="MyEditTextStylemenu4" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/menu4p</item>
        <item name="colorControlNormal">@color/menu4p</item>
    </style>

    <style name="MyEditTextStyleGrey" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/grisClaro</item>
        <item name="colorControlNormal">@color/grisClaro</item>
    </style>
</resources>