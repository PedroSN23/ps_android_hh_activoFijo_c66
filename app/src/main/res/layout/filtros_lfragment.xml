<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.activity.FiltrosActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="20">

       <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listViewFiltros"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="18" />

        <LinearLayout
            android:id="@+id/menu4BotonesFiltros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                tools:ignore="NestedWeights" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/butNuevoFiltro"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="6"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="center">
            </com.airbnb.lottie.LottieAnimationView>


        <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7" />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/menu4ProgresoUsuario"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grisTrans"
        android:visibility="gone">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:theme="@style/ProgressBarmenu4"/>
    </RelativeLayout>

</RelativeLayout>