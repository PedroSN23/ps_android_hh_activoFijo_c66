<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.ConsultaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="20">
        <LinearLayout
            android:id="@+id/TituloFormulario"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/menu2p"
            android:elevation="18dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="40">
            <com.example.pp_android_handheld_library.view.clases.IconGeneric
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:onClick="SalirFormulario"
                android:text="@string/chevron_left"
                android:textColor="@color/menu2to"
                android:textSize="30sp"
                tools:ignore="NestedWeights" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:gravity="center"
                android:text="@string/menu2s1tit"
                android:textColor="@color/menu2to"
                android:textSize="27sp"
                android:textStyle="bold" />
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16"
            android:fillViewport="true">
            <LinearLayout
                android:id="@+id/linearInsertForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    tools:ignore="UselessParent">
                    <com.example.pp_android_handheld_library.view.clases.IconGeneric
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/chevron_left"
                        android:textColor="@color/menu2p"
                        android:onClick="ImagenAnterior"
                        android:textSize="60sp"/>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:onClick="TomarFoto"
                        android:layout_weight="2">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_act"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true" />
                        <com.example.pp_android_handheld_library.view.clases.IconGeneric
                            android:id="@+id/icon_act"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="@string/zmdi_camera"
                            android:textSize="60sp" />
                    </RelativeLayout>
                    <com.example.pp_android_handheld_library.view.clases.IconGeneric
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/chevron_right"
                        android:textColor="@color/menu2p"
                        android:onClick="ImagenSiguiente"
                        android:textSize="60sp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/menu2BotonesFormulario"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="20"
            tools:ignore="UselessParent">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                tools:ignore="NestedWeights" />

            <LinearLayout
                android:id="@+id/guardarFormulario"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:layout_marginTop="4dp"
                android:background="@drawable/menu4_button"
                android:clickable="true"
                android:focusable="true"
                android:onClick="GuardarFormularioForm">
                <TextView
                    android:id="@+id/menu2TextoIniciarBusc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="@string/butGuardar"
                    android:textColor="@color/menu2to"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="NestedWeights" />
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    tools:ignore="NestedWeights">

                    <com.example.pp_android_handheld_library.view.clases.IconGeneric
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/zmdi_save"
                        android:textColor="@color/menu2to"
                        android:textSize="18sp" />
                </RelativeLayout>
            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

            <LinearLayout
                android:id="@+id/cambiarLector"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_weight="6"
                android:background="@drawable/menu4_button"
                android:clickable="true"
                android:focusable="true"
                android:onClick="AbrirDialogo">
                <TextView
                    android:id="@+id/menu2TextoModoLectura"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="@string/butCambiar"
                    android:textColor="@color/menu2to"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="NestedWeights" />
                <com.example.pp_android_handheld_library.view.clases.IconGeneric
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/undo_alt"
                    android:textColor="@color/menu2to"
                    android:textSize="18sp"
                    tools:ignore="NestedWeights" />
            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/menu2ProgresoForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grisTrans"
        android:visibility="gone">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:theme="@style/ProgressBarmenu2p"/>
        <TextView
            android:id="@+id/progresoForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/verdeAstlix"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="@string/zeroTxt"
            android:visibility="gone"/>
    </RelativeLayout>

</RelativeLayout>