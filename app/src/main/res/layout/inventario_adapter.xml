<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="6dip"
    tools:ignore="PrivateResource">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/menu1_rectangle"
        android:orientation="horizontal">
        <com.example.pp_android_handheld_library.view.clases.IconGeneric
            android:id="@+id/icon_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20sp"
            android:text="@string/flaticon_rfid"
            android:tag="flaticon"
            android:textColor="@color/grisAstlix"
            tools:ignore="PrivateResource" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:padding="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/maintxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/grisAstlix"
                android:text=""
                android:maxLines="1"
                android:ellipsize="middle"
                android:gravity="center"
                tools:ignore="NestedWeights,PrivateResource" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grisAstlix"
                tools:ignore="PrivateResource" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:textColor="@color/grisAstlix"
                android:text="DESCRIPCIÃ“N"
                android:gravity="center"
                tools:ignore="NestedWeights,PrivateResource,SmallSp" />
            <TextView
                android:id="@+id/maintxtid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="middle"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:text=""
                android:textColor="@color/grisAstlix"
                android:gravity="center"
                tools:ignore="PrivateResource" />
            <View
                android:layout_width="250dp"
                android:layout_height="2dp"
                android:background="@color/grisAstlix"
                tools:ignore="PrivateResource" />
            <TextView
                android:id="@+id/codtypeTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:textColor="@color/grisAstlix"
                android:text="ID"
                android:gravity="center"
                tools:ignore="NestedWeights,PrivateResource,SmallSp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="5dp"
            android:gravity="center"
            android:orientation="vertical">
            <com.example.pp_android_handheld_library.view.clases.IconGeneric
                android:id="@+id/semaforo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="@color/faltante"
                android:text="@string/question_circle"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>