<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_root2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:text="@string/menu2s1promptTit"
        android:textColor="@color/menu2to"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="@color/grisClaro"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layoutbotonesSlide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView12"
        android:layout_alignParentStart="true"
        android:baselineAligned="false"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/switchBut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutbotonesSlide"
        android:layout_alignParentStart="true"
        android:background="@color/grisClaro"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchRfidForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:checked="true"
                android:thumb="@drawable/thumb_gray"
                app:switchMinWidth="100dp"
                app:track="@drawable/track_switch_green" />
        </RelativeLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/activosIdsSpinnerLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/switchBut"
        android:background="@color/grisClaro"
        android:orientation="vertical"
        android:layout_alignParentStart="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <Spinner
            android:id="@+id/activosIdsSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/activosIdsSpinnerLinear"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:baselineAligned="false">
        <LinearLayout
            android:id="@+id/okProptFormulario"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="4"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_created"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="@string/seleccionar"
                android:textStyle="bold"
                android:layout_gravity="center"
                tools:ignore="NestedWeights" />
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                tools:ignore="NestedWeights">

                <com.example.pp_android_handheld_library.view.clases.IconGeneric
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/check"
                    android:textColor="@color/menu2to"
                    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/exitProptFormulario"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="4"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/button_created"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:id="@+id/menu2TextoModoLectura"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="@string/exit"
                android:textStyle="bold"
                android:layout_gravity="center"
                tools:ignore="NestedWeights" />
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                tools:ignore="NestedWeights">
                <com.example.pp_android_handheld_library.view.clases.IconGeneric
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/menu2to"
                    android:layout_centerInParent="true"
                    android:text="@string/times"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>