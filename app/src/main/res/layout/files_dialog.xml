<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/padre"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_drawable"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp">
    <ImageView
        android:id="@+id/logoImg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/imagen_astlix" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listArchivos"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/logoImg"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/butons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/listArchivos">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="4"
            android:paddingStart="10dp"
            android:drawableStart="@drawable/ic_cancel_black"
            android:background="@drawable/menu2_button"
            android:text="@string/butCancelar"
            android:textColor="@color/grisAstlix"
            android:elevation="10dp"
            tools:ignore="RtlSymmetry" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>